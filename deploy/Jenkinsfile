pipeline {
    agent {
        kubernetes {
            cloud 'k3s'
            namespace 'jenkins'
            serviceAccount 'jenkins'
            yamlFile 'deploy/testproject.yaml'
            defaultContainer 'go'
        }
    }
    options {
        timestamps()
        }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                sh 'echo "Checked out to: $(pwd)" && ls -lah'
            }
        }

        stage('Build') {
            steps {
                sh '''
                  echo "Workdir: $(pwd)"
                  whoami
                  go version
                  go mod tidy
                  go build -buildvcs=false -o app
                  ls -lah
                '''
            }
        }
    }
}
